<Window x:Class="Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="Авторизація" Height="500" Width="400" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="Transparent" AllowsTransparency="True" WindowStyle="None">

    <Border CornerRadius="20" Padding="20">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#6DD5FA" Offset="0"/>
                <GradientStop Color="#2980B9" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            
            <Button Content="✕"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,-5,-5,0"
                    Background="Transparent"
                    Foreground="#AAFFFFFF"
                    BorderThickness="0"
                    FontSize="18"
                    Cursor="Hand"
                    Click="BtnClose_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Border Background="White" CornerRadius="15" VerticalAlignment="Center" Padding="30">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.2"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="Вхід" FontSize="28" FontWeight="Bold" Foreground="#333" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                    <TextBlock Text="Логін" Foreground="Gray" Margin="5,0,0,0"/>
                    <TextBox x:Name="TxtLogin"/>

                    <TextBlock Text="Пароль" Foreground="Gray" Margin="5,0,0,0"/>
                    <PasswordBox x:Name="TxtPassword"/>

                    <Button Content="Увійти" Click="BtnLogin_Click" Style="{StaticResource ModernBtn}"/>

                    <TextBlock Text="або увійти через" HorizontalAlignment="Center" Foreground="#AAA" Margin="0,10"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                        <Button Content="G" Width="40" Height="40" Margin="5" Background="#DB4437" Style="{StaticResource ModernBtn}" Click="Social_Click"/>
                        <Button Content="f" Width="40" Height="40" Margin="5" Background="#4267B2" Style="{StaticResource ModernBtn}" Click="Social_Click"/>
                    </StackPanel>

                    <Button Content="Немає акаунту? Зареєструватися" 
                            Background="Transparent" 
                            Foreground="#6C63FF" 
                            BorderThickness="0" 
                            Cursor="Hand"
                            Click="BtnRegister_Click"/>
                    
                    </StackPanel>
            </Border>
            
        </Grid>
    </Border>
</Window>
