<Window x:Class="Task1.Task4Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="Завдання 4" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <RowDefinition Height="*"/>    </Grid.RowDefinitions>

        <TextBlock Text="Ціль: приховати усі кнопки!" 
                   Grid.Row="0"
                   HorizontalAlignment="Center" 
                   Margin="10" 
                   FontSize="16" 
                   FontWeight="Bold"/>

        <WrapPanel x:Name="ButtonPanel" 
                   Grid.Row="1" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center">
            
            <Button x:Name="Button1" Content="Кнопка 1" Margin="5" Width="100" Height="50"
                    Background="CornflowerBlue" Foreground="White" Click="Button_Click"/>
            
            <Button x:Name="Button2" Content="Кнопка 2" Margin="5" Width="100" Height="50"
                    Background="IndianRed" FontWeight="Bold" Click="Button_Click"/>
            
            <Button x:Name="Button3" Content="Кнопка 3" Margin="5" Width="100" Height="50"
                    Background="MediumSeaGreen" FontStyle="Italic" Click="Button_Click"/>
            
            <Button x:Name="Button4" Content="Кнопка 4" Margin="5" Width="100" Height="50"
                    Background="Orange" BorderBrush="Black" BorderThickness="2" Click="Button_Click"/>
            
            <Button x:Name="Button5" Content="Кнопка 5" Margin="5" Width="100" Height="50"
                    Background="Orchid" Click="Button_Click"/>
        </WrapPanel>

        <Label x:Name="WinLabel"
               Content="Перемога!"
               Grid.Row="1"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               FontSize="32"
               FontWeight="ExtraBold"
               Foreground="Green"
               Visibility="Collapsed"/> </Grid>
</Window>