<Window x:Class="Task1.Task3Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="Завдання 3" Height="250" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="ManagedTextBox" 
                 Text="Введіть щось..." 
                 Grid.Row="0"
                 Width="250"
                 Height="30"
                 HorizontalAlignment="Center" 
                 VerticalAlignment="Center"/>

        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="20">
            
            <Button Content="Приховати" Margin="5" Padding="10,5" Click="HideButton_Click"/>
            <Button Content="Показати" Margin="5" Padding="10,5" Click="ShowButton_Click"/>
            <Button Content="Очистити" Margin="5" Padding="10,5" Click="ClearButton_Click"/>
        </StackPanel>
    </Grid>
</Window>