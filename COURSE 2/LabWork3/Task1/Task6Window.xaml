<Window x:Class="Task1.Task6Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="Завдання 6" Height="300" Width="450">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <WrapPanel Grid.Column="0" Background="White">
            
            <Button Content="Navy" Margin="2" Background="Navy" Foreground="White"/>
            <Button Content="Blue" Margin="2" Background="Blue" Foreground="White"/>
            <Button Content="Aqua" Margin="2" Background="Aqua"/>
            <Button Content="Teal" Margin="2" Background="Teal" Foreground="White"/>
            <Button Content="Olive" Margin="2" Background="Olive" Foreground="White"/>
            <Button Content="Green" Margin="2" Background="Green" Foreground="White"/>
            <Button Content="Lime" Margin="2" Background="Lime"/>
            <Button Content="Orange" Margin="2" Background="Orange"/>
            <Button Content="Red" Margin="2" Background="Red" Foreground="White"/>
            <Button Content="Maroon" Margin="2" Background="Maroon" Foreground="White"/>
            <Button Content="Fuchsia" Margin="2" Background="Fuchsia"/>
            <Button Content="Purple" Margin="2" Background="Purple" Foreground="White"/>
            <Button Content="Black" Margin="2" Background="Black" Foreground="White"/>
            <Button Content="Gray" Margin="2" Background="Gray" Foreground="White"/>
            <Button Content="White" Margin="2" Background="White"/>
        </WrapPanel>

        <Border Grid.Column="1" Background="White"/>
    </Grid>
</Window>