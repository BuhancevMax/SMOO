<Window x:Class="Task1.EditStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="EditStudentWindow" Height="250" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="130"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0"
                       Margin="0,0,5,5" VerticalAlignment="Center"
                       Text="Прізвище:"/>
            <TextBox Grid.Row="0" Grid.Column="1"
                     Margin="0,0,0,5"
                     Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Grid.Row="1" Grid.Column="0"
                       Margin="0,0,5,5" VerticalAlignment="Center"
                       Text="Ім'я:"/>
            <TextBox Grid.Row="1" Grid.Column="1"
                     Margin="0,0,0,5"
                     Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Grid.Row="2" Grid.Column="0"
                       Margin="0,0,5,5" VerticalAlignment="Center"
                       Text="Вік:"/>
            <TextBox Grid.Row="2" Grid.Column="1"
                     Margin="0,0,0,5"
                     Text="{Binding Age, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Grid.Row="3" Grid.Column="0"
                       Margin="0,0,5,5" VerticalAlignment="Center"
                       Text="Стать:"/>
            <ComboBox Grid.Row="3" Grid.Column="1"
                      Margin="0,0,0,5"
                      SelectedValue="{Binding Gender, UpdateSourceTrigger=PropertyChanged}"
                      SelectedValuePath="Content">
                <ComboBoxItem Content="Чоловіча"/>
                <ComboBoxItem Content="Жіноча"/>
            </ComboBox>
        </Grid>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="OK" Width="80"
                    Margin="0,0,5,0"
                    Click="Ok_Click"/>
            <Button Content="Скасувати" Width="80"
                    Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
