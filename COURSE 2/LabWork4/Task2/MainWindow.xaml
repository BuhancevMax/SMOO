<Window x:Class="Task2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task2"
        mc:Ignorable="d"
        Title="BestOil" Height="450" Width="600" ResizeMode="NoResize">
    <Grid Background="#FFF0F0F0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>

        <GroupBox Header="Автозаправка" Margin="10" Grid.Row="0" Grid.Column="0" BorderBrush="Gray">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Бензин" VerticalAlignment="Center" Margin="0,0,10,10"/>
                <ComboBox x:Name="FuelComboBox" Grid.Column="1" Margin="0,0,0,10" SelectionChanged="FuelComboBox_SelectionChanged"/>

                <TextBlock Text="Ціна" Grid.Row="1" VerticalAlignment="Center" Margin="0,0,10,10"/>
                <TextBox x:Name="PriceTextBox" Grid.Row="1" Grid.Column="1" IsReadOnly="True" Margin="0,0,0,10"/>
                <TextBlock Text="грн." Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" Margin="5,0,0,10"/>

                <GroupBox Header="" Grid.Row="2" Grid.ColumnSpan="3" Margin="0,10,0,0">
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <RadioButton x:Name="RbQuantity" Content="Кількість" GroupName="FuelType" IsChecked="True" Checked="RadioButton_Checked" Margin="0,0,10,10"/>
                        <TextBox x:Name="TxtQuantity" Grid.Column="1" TextChanged="FuelInput_TextChanged"/>
                        <TextBlock Text="л." Grid.Column="2" Margin="5,0,0,0"/>

                        <RadioButton x:Name="RbSum" Content="Сума" GroupName="FuelType" Grid.Row="1" Checked="RadioButton_Checked" Margin="0,0,10,0"/>
                        <TextBox x:Name="TxtSumInput" Grid.Row="1" Grid.Column="1" IsReadOnly="True" TextChanged="FuelInput_TextChanged"/>
                        <TextBlock Text="грн." Grid.Row="1" Grid.Column="2" Margin="5,0,0,0"/>
                    </Grid>
                </GroupBox>

                <GroupBox x:Name="GbFuelResult" Header="До оплати:" Grid.Row="3" Grid.ColumnSpan="3" Margin="0,10,0,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock x:Name="LblFuelTotal" Text="0.00" FontSize="24" FontWeight="Bold"/>
                        <TextBlock x:Name="LblFuelUnit" Text=" грн." VerticalAlignment="Bottom" Margin="5,0,0,4"/>
                    </StackPanel>
                </GroupBox>
            </Grid>
        </GroupBox>

        <GroupBox Header="Міні-Кафе" Margin="10" Grid.Row="0" Grid.Column="1" BorderBrush="Gray">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Ціна" Grid.Column="1" HorizontalAlignment="Center"/>
                <TextBlock Text="Кількість" Grid.Column="2" HorizontalAlignment="Center"/>

                <CheckBox x:Name="CbHotDog" Content="Хот-дог" Grid.Row="1" VerticalAlignment="Center" Checked="Cafe_Checked" Unchecked="Cafe_Checked"/>
                <TextBox x:Name="PriceHotDog" Text="4,00" Grid.Row="1" Grid.Column="1" Width="40" Margin="5" IsReadOnly="True"/>
                <TextBox x:Name="CountHotDog" Text="0" Grid.Row="1" Grid.Column="2" Width="40" Margin="5" IsEnabled="False" TextChanged="Cafe_TextChanged"/>

                <CheckBox x:Name="CbHamburger" Content="Гамбургер" Grid.Row="2" VerticalAlignment="Center" Checked="Cafe_Checked" Unchecked="Cafe_Checked"/>
                <TextBox x:Name="PriceHamburger" Text="5,40" Grid.Row="2" Grid.Column="1" Width="40" Margin="5" IsReadOnly="True"/>
                <TextBox x:Name="CountHamburger" Text="0" Grid.Row="2" Grid.Column="2" Width="40" Margin="5" IsEnabled="False" TextChanged="Cafe_TextChanged"/>

                <CheckBox x:Name="CbFries" Content="Картопля-фрі" Grid.Row="3" VerticalAlignment="Center" Checked="Cafe_Checked" Unchecked="Cafe_Checked"/>
                <TextBox x:Name="PriceFries" Text="7,20" Grid.Row="3" Grid.Column="1" Width="40" Margin="5" IsReadOnly="True"/>
                <TextBox x:Name="CountFries" Text="0" Grid.Row="3" Grid.Column="2" Width="40" Margin="5" IsEnabled="False" TextChanged="Cafe_TextChanged"/>

                <CheckBox x:Name="CbCoke" Content="Кока-кола" Grid.Row="4" VerticalAlignment="Center" Checked="Cafe_Checked" Unchecked="Cafe_Checked"/>
                <TextBox x:Name="PriceCoke" Text="4,40" Grid.Row="4" Grid.Column="1" Width="40" Margin="5" IsReadOnly="True"/>
                <TextBox x:Name="CountCoke" Text="0" Grid.Row="4" Grid.Column="2" Width="40" Margin="5" IsEnabled="False" TextChanged="Cafe_TextChanged"/>

                <GroupBox Header="До оплати:" Grid.Row="5" Grid.ColumnSpan="3" Margin="0,10,0,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock x:Name="LblCafeTotal" Text="0.00" FontSize="24" FontWeight="Bold"/>
                        <TextBlock Text=" грн." VerticalAlignment="Bottom" Margin="5,0,0,4"/>
                    </StackPanel>
                </GroupBox>
            </Grid>
        </GroupBox>

        <GroupBox Header="ВСЬОГО до сплати" Grid.Row="1" Grid.ColumnSpan="2" Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/> <ColumnDefinition Width="Auto"/> <ColumnDefinition Width="*"/>    <ColumnDefinition Width="Auto"/> </Grid.ColumnDefinitions>

                <Image Source="cat.png" 
                       Grid.Column="0" 
                       Width="80" 
                       Height="80" 
                       Margin="10,5,0,5" 
                       VerticalAlignment="Center"/>

                <Button x:Name="BtnCalculate" 
                        Grid.Column="1"
                        Content="Прорахувати" 
                        Width="150" 
                        Height="50" 
                        Margin="20,10,10,10" 
                        Click="BtnCalculate_Click"/>

                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,50,0">
                    <TextBlock x:Name="LblTotalSum" Text="0.00" FontSize="36" FontWeight="Bold"/>
                    <TextBlock Text=" грн." VerticalAlignment="Bottom" Margin="10,0,0,6" FontSize="16"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
