<Window x:Class="Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="Калькулятор" Height="500" Width="350" MinHeight="450" MinWidth="300" ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <RowDefinition Height="2*"/> <RowDefinition Height="5*"/> </Grid.RowDefinitions>

        <TextBox x:Name="HistoryDisplay"
                 Grid.Row="0"
                 Text=""
                 FontSize="16"
                 IsReadOnly="True" 
                 TextAlignment="Right"
                 VerticalAlignment="Bottom"
                 BorderThickness="0"
                 Background="Transparent"
                 Foreground="Gray"/>

        <TextBox x:Name="CurrentDisplay"
                 Grid.Row="1"
                 Text="0"
                 FontSize="48"
                 FontWeight="Bold"
                 IsReadOnly="True" 
                 TextAlignment="Right"
                 VerticalAlignment="Bottom"
                 BorderThickness="0"/>

        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <Button x:Name="ButtonCE" Grid.Row="0" Grid.Column="0" Content="CE" Click="ButtonCE_Click"/>
            <Button x:Name="ButtonC" Grid.Row="0" Grid.Column="1" Content="C" Click="ButtonC_Click"/>
            <Button x:Name="ButtonBackspace" Grid.Row="0" Grid.Column="2" Content="&lt;" Click="ButtonBackspace_Click"/>
            <Button x:Name="ButtonDivide" Grid.Row="0" Grid.Column="3" Content="/" Click="ButtonOperation_Click"/>

            <Button x:Name="Button7" Grid.Row="1" Grid.Column="0" Content="7" Click="ButtonNumber_Click" FontWeight="Bold"/>
            <Button x:Name="Button8" Grid.Row="1" Grid.Column="1" Content="8" Click="ButtonNumber_Click" FontWeight="Bold"/>
            <Button x:Name="Button9" Grid.Row="1" Grid.Column="2" Content="9" Click="ButtonNumber_Click" FontWeight="Bold"/>
            <Button x:Name="ButtonMultiply" Grid.Row="1" Grid.Column="3" Content="*" Click="ButtonOperation_Click"/>

            <Button x:Name="Button4" Grid.Row="2" Grid.Column="0" Content="4" Click="ButtonNumber_Click" FontWeight="Bold"/>
            <Button x:Name="Button5" Grid.Row="2" Grid.Column="1" Content="5" Click="ButtonNumber_Click" FontWeight="Bold"/>
            <Button x:Name="Button6" Grid.Row="2" Grid.Column="2" Content="6" Click="ButtonNumber_Click" FontWeight="Bold"/>
            <Button x:Name="ButtonSubtract" Grid.Row="2" Grid.Column="3" Content="-" Click="ButtonOperation_Click"/>

            <Button x:Name="Button1" Grid.Row="3" Grid.Column="0" Content="1" Click="ButtonNumber_Click" FontWeight="Bold"/>
            <Button x:Name="Button2" Grid.Row="3" Grid.Column="1" Content="2" Click="ButtonNumber_Click" FontWeight="Bold"/>
            <Button x:Name="Button3" Grid.Row="3" Grid.Column="2" Content="3" Click="ButtonNumber_Click" FontWeight="Bold"/>
            <Button x:Name="ButtonAdd" Grid.Row="3" Grid.Column="3" Content="+" Click="ButtonOperation_Click"/>

            <Button x:Name="ButtonDecimal" Grid.Row="4" Grid.Column="0" Content="." Click="ButtonDecimal_Click"/>
            <Button x:Name="Button0" Grid.Row="4" Grid.Column="1" Content="0" Click="ButtonNumber_Click" FontWeight="Bold"/>
            <Button x:Name="ButtonEquals" Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="2" Content="=" Click="ButtonEquals_Click" Background="CornflowerBlue" Foreground="White"/>
        </Grid>
    </Grid>
</Window>
